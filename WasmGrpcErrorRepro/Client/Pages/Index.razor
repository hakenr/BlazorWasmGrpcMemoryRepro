@page "/"
@using ProtoBuf.Grpc.Client
@using WasmGrpcErrorRepro.Shared

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<div class="requests">
    @foreach (var request in requests)
    {
        <div class="request">
            <span>Count: </span>
            <input type="number" @bind-value="request.Count" />
            <button @onclick="() => requests.Remove(request)">Remove</button>
        </div>
    }

    <button @onclick="() => requests.Add(new())">Add Request</button>
    <button @onclick="GetDataAsync">Request Data</button>
</div>


<SurveyPrompt Title="How is Blazor working for you?" />

@code {
    [Inject] private NavigationManager NavigationManager { get; set; }

    private readonly List<DataRequest> requests = new()
        {
            new() { Count = 250000 },
        };

    private async Task GetDataAsync()
    {
        var handler = new Grpc.Net.Client.Web.GrpcWebHandler(Grpc.Net.Client.Web.GrpcWebMode.GrpcWeb, new HttpClientHandler());
        using var channel = Grpc.Net.Client.GrpcChannel.ForAddress(NavigationManager.BaseUri, new Grpc.Net.Client.GrpcChannelOptions() { HttpClient = new HttpClient(handler) });

        var dataTasks = new List<Task<IEnumerable<int>>>();
        foreach (var request in requests)
        {
            var dataService = channel.CreateGrpcService<IDataService>();
            dataTasks.Add(dataService.GetDataAsync(request));
        }
        await Task.WhenAll(dataTasks);
    }
}
